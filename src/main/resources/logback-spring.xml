<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- 定义日志输出格式 -->
    <property name="LOG_PATTERN" value="%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{50} - %msg%n"/>

    <!-- ✅ 默认日志路径设为 /var/log/graduation-project -->
    <property name="LOG_PATH" value="/var/log/graduation-project"/>

    <!-- 开发环境：日志输出到控制台，便于调试 -->
    <springProfile name="dev">
        <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
            <encoder>
                <pattern>${LOG_PATTERN}</pattern>
            </encoder>
        </appender>

        <!-- 设置根日志级别 -->
        <root level="INFO">
            <appender-ref ref="STDOUT"/>
        </root>

        <!-- mapper 层开启 SQL 输出（MyBatis） -->
        <logger name="com.graduationprojectordermanagementsystem.mapper" level="DEBUG" additivity="false">
            <appender-ref ref="STDOUT"/>
        </logger>
        <logger name="org.springframework.jdbc.core" level="DEBUG" additivity="false">
            <appender-ref ref="STDOUT"/>
        </logger>
    </springProfile>

    <!-- 生产环境：日志输出到文件，按天+大小滚动，保留30天 -->
    <springProfile name="prod">
        <!-- 总日志输出 -->
        <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
            <file>${LOG_PATH}/app.log</file>
            <encoder>
                <pattern>${LOG_PATTERN}</pattern>
            </encoder>
            <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
                <!-- 滚动文件命名：app.2025-09-01.0.gz -->
                <fileNamePattern>${LOG_PATH}/archived/app.%d{yyyy-MM-dd}.%i.gz</fileNamePattern>
                <!-- 每个日志文件最大100MB -->
                <maxFileSize>100MB</maxFileSize>
                <!-- 最多保留30天的历史日志 -->
                <maxHistory>30</maxHistory>
                <!-- 日志总大小不超过1GB -->
                <totalSizeCap>3GB</totalSizeCap>
                <!-- 启动时清理过期日志 -->
                <cleanHistoryOnStart>true</cleanHistoryOnStart>
            </rollingPolicy>
        </appender>

        <!-- 错误日志单独输出 -->
        <appender name="ERROR_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
            <file>${LOG_PATH}/error.log</file>
            <filter class="ch.qos.logback.classic.filter.LevelFilter">
                <level>ERROR</level>
                <onMatch>ACCEPT</onMatch>
                <onMismatch>DENY</onMismatch>
            </filter>
            <encoder>
                <pattern>${LOG_PATTERN}</pattern>
            </encoder>
            <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
                <fileNamePattern>${LOG_PATH}/archived/error.%d{yyyy-MM-dd}.%i.gz</fileNamePattern>
                <maxFileSize>100MB</maxFileSize>
                <maxHistory>30</maxHistory>
            </rollingPolicy>
        </appender>

        <!-- 设置根日志级别 -->
        <root level="INFO">
            <appender-ref ref="FILE"/>
            <appender-ref ref="ERROR_FILE"/>
        </root>

        <!-- 关闭 mapper 的 DEBUG 日志（生产环境不输出 SQL） -->
        <logger name="com.graduationproject.mapper" level="WARN"/>
        <logger name="org.springframework.jdbc.core" level="WARN"/>
    </springProfile>
</configuration>